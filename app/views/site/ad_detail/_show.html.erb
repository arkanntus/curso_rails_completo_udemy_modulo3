<div class="thumbnail">
    <%= image_tag @ad.picture.url(:large), class:"img-reponsive" %>
    <div class="caption-full">
        <h4 class=pull-right><%= humanized_money_with_symbol @ad.price %></h4>
        <h4> <a href="#"><%= @ad.title %></a></h4>
        <%= @ad.description.html_safe %>
    </div>
    <div class="ratings">
        <%= rating_for @ad, 'quality', disable_after_rate: true %>
    </div>
</div>

<div class="well">
    <% if member_signed_in? %>
      <div class="text-right">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">
              Deixe um coment√°rio
          </button>
      </div>
      <% else %>
      <div class="text-right">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-success" disabled="disabled" data-toggle="modal" data-target="#commentModal">
              Efetue login para comentar
          </button>
      </div>
    <% end %>
    <hr>
    <%= render partial: 'site/ad_detail/comments' %>
</div>
</div>
